@page
@model CardstopRazor_Temp.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <!-- Razor pages doesn't use action method, asp-page is the full route -->
            <a asp-page="/Categories/Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category
                </th>
                <th>
                    Display Order
                </th>
            </tr>
        </thead>
        <tbody>
            <!-- Loop through each object in CategoryList, ordered by DisplayOrder-->
            <!-- Rather than model directly like in MVC, Model is the complete
                IndexModel which contains CategoryList and so must be accessed like that -->
            @foreach(var obj in Model.CategoryList.OrderBy(u=>u.DisplayOrder))
            {
                <tr>
                    <!-- Display current iteration object name property in td -->
                    <td>@obj.Name</td>
                    <!-- Display current iteration object display order property in td-->
                    <td>
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <!-- asp-route-id is still valid when working with razor pages -->
                             <a asp-page="/Categories/Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>  Edit
                             </a>
                            <a asp-page="//Categories/Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i>  Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>